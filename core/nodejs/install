#!/usr/bin/env bash

set -euo pipefail

source "$(dirname "$0")/../../framework"

main() {
  if is_termux; then
    dotf-apt nodejs-lts
  elif [ "$DOTF_CONFIG_NODE_PROVIDER" = "n" ]; then
    git_clone https://github.com/tj/n "$N_PREFIX"
    install_node
  else
    dotf-apt nodejs npm
  fi
}

install_node() {
  if [ -z "$(n ls)" ]; then
    n lts
    npm install -g npm # Upgrade to the latest npm
  fi
}

main "$@"
