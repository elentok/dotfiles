#!/usr/bin/env bash

set -euo pipefail

function main() {
  if [ "$1" == "left" ]; then
    status-left
  else
    status-right
  fi
}

function status-left() {
  pretty-host
}

function status-right() {
  echo -n "#{pomodoro_status}"
  item fg=yellow "$(~/.dotfiles/extra/scripts/bat-left)"
}

function item() {
  local style="$1"
  local text="$2"
  echo -n "#[${style}]${text}#[default]"
}

function pretty-host() {
  color="$(dotf-host-info tmux-color)"
  item "bg=$color,fg=black" " $(dotf-host-info pretty-name) "
  item "fg=$color" "î‚´ "
}

main "$@"

