html
  head
    title Orders
    meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0")
    style(type="text/css")
      include style.css
  body
    include order
    include item

    h1 Orders (#{orders.length})

    .o-toolbar
      button.o-toolbar-btn.o-toolbar-btn--refresh &#8634;
      .o-toolbar__message

    .o-orders
      each order in orders
        +order(order)

    script(type="text/javascript")
      include app.js
