#!/usr/bin/env bash
#
# Usage:
#
#   yank-osc52 {file}    - yank file to clipboard
#   yank-osc52 -         - yank stdin to clipboard

# based on
# https://www.freecodecamp.org/news/tmux-in-practice-integration-with-system-clipboard-bcd72c62ff7b/

set -euo pipefail

function main() {
  # preserve trailing new lines
  # See https://wiki.bash-hackers.org/syntax/expansion/cmdsubst#examples
  BUF="$(cat "$@"; echo x)"
  BUF="${BUF%x}"

  validate-input-length

  OSC52="\033]52;c;$( printf %s "$BUF" | base64 | tr -d '\r\n' )\a"


  ssh-yank

  if [ -z "${TMUX:-}" ]; then
    # for regular terminal
    printf %s "$OSC52"
  else
    tmux-yank
  fi

  # allow piping "yank-osc52" to other commands
  printf %s "$BUF"
}

function validate-input-length() {
  buflen=$(printf %s "$BUF" | wc -c)
  maxlen=74994
  if [[ $buflen -gt $maxlen ]]; then
    printf "input is %d bytes too long" "$(( buflen - maxlen ))" >&2
    exit 1
  fi
}

function ssh-yank() {
  if [ -n "${SSH_TTY:-}" ] && [ -w "${SSH_TTY:-}" ]; then
    printf "$OSC52" > "$SSH_TTY"
  fi
}

function tmux-yank() {
  tty=$(tmux list-panes -F "#{pane_active} #{pane_tty}" | awk '$1=="1" { print $2 }')
  printf "\033Ptmux;\033$OSC52\033\\" > "$tty"
}


main "$@"
