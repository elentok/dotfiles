#!/usr/bin/env bash

source $DOTF/framework

PIP_PKGS="pip neovim neovim-remote httpie"
NPM_PKGS="npm yarn json"

for pkg in $PIP_PKGS; do
  pip3 install $pkg --upgrade --user
done

for pkg in $NPM_PKGS; do
  npm install -g $pkg
done


(cd $DOTF/nvim/plugged/coc.nvim && git reset --hard origin/master)
nvim +PlugUpdate
nvim +CocUpdate
