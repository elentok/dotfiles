[ui]
paginate = never

[alias]
s = status
d = !$HG diff "$@" | delta
c = commit --interactive
ca = commit --amend
cia = commit --interactive --amend
he = histedit
rbc = rebase --continue
res = resolve --mark

# hgi related aliases:
log-for-hgi = log -r smart
dd = !hgi diff
lg = !hgi list
ss = !hgi status

lll = log --template "{node|short} {date|isodate} {author|user} {cl}{desc|firstline}\n" .


%include ~/.dotlocal/hgrc
