# vim: filetype=config

theme = "Catppuccin Mocha"

# Find fonts names by running `ghostty +list-fonts`

# brew install font-agave-nerd-font
font-family = "Agave Nerd Font Regular"
font-family-bold = "Agave Nerd Font Regular"
font-family-italic = "Operator Mono"
font-family-bold-italic = "Operator Mono"

# font-family = "ZedMono NFM Medium"
# font-family-bold = "ZedMono NFM"

# Increase line height by 5%
adjust-cell-height = 10%
adjust-cell-width = -7%

font-size = 16.0
macos-option-as-alt = true

# Disable font ligatures
font-feature = "-calt"
font-feature = "-liga"
font-feature = "-dlig"


# Map Cmd+{key} to Ctrl+{key}
keybind = cmd+a=text:\x01
keybind = cmd+b=text:\x02
keybind = cmd+c=text:\x03
keybind = cmd+d=text:\x04
keybind = cmd+e=text:\x05
keybind = cmd+f=text:\x06
keybind = cmd+g=text:\x07
keybind = cmd+h=text:\x08
keybind = cmd+i=text:\x09
keybind = cmd+j=text:\x0A
keybind = cmd+k=text:\x0B
keybind = cmd+l=text:\x0C
keybind = cmd+m=text:\x0D
keybind = cmd+n=text:\x0E
keybind = cmd+o=text:\x0F
keybind = cmd+p=text:\x10
keybind = cmd+q=text:\x11
keybind = cmd+r=text:\x12
keybind = cmd+s=text:\x13
keybind = cmd+t=text:\x14
keybind = cmd+u=text:\x15
# keybind = cmd+v=text:\x16 # Cmd+V is for pasting
keybind = cmd+w=text:\x17
keybind = cmd+x=text:\x18
keybind = cmd+y=text:\x19
keybind = cmd+z=text:\x1A
keybind = cmd+[=text:\x1B
keybind = cmd+]=text:\x1D

# <c-e>h
keybind = cmd+,=text:\x05h
# <c-e>l
keybind = cmd+.=text:\x05l

# Leader mapping
keybind = cmd+/>c=new_tab
keybind = cmd+/>r=reload_config
keybind = cmd+/>[=previous_tab
keybind = cmd+/>]=next_tab
keybind = cmd+/>q=close_surface
keybind = cmd+/>y=copy_to_clipboard
# keybind = cmd+/>v=paste_from_clipboard
keybind = cmd+/>v=new_split:right
keybind = cmd+/>s=new_split:down

keybind = cmd+/>e=write_scrollback_file:open

# Quick terminal

keybind = global:cmd+2=toggle_quick_terminal
quick-terminal-animation-duration = 0

custom-shader = ~/.dotfiles/extra/ghostty/cursor_blaze.glsl
