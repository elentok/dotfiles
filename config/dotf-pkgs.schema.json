{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "github_repo": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "filenames": {
            "type": "object",
            "properties": {
              "linux": {
                "type": "string"
              },
              "mac": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
