{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "github_repo": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "platforms": {
            "type": "object",
            "properties": {
              "linux": {
                "type": "object",
                "properties": {
                  "bin": {
                    "type": "string"
                  },
                  "asset_regexp": {
                    "type": "string"
                  }
                }
              },
              "darwin": {
                "type": "object",
                "properties": {
                  "bin": {
                    "type": "string"
                  },
                  "asset_regexp": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
