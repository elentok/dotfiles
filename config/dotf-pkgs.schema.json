{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "github_repo": {
            "type": "string"
          },
          "bin_target": {
            "type": "string"
          },
          "prerelease": {
            "type": "boolean"
          },
          "strip_components": {
            "type": "number"
          },
          "extract": {
            "type": "boolean"
          },
          "platforms": {
            "type": "object",
            "properties": {
              "linux": {
                "type": "object",
                "properties": {
                  "bin_source": {
                    "type": "string"
                  },
                  "asset_regexp": {
                    "type": "string"
                  }
                }
              },
              "darwin": {
                "type": "object",
                "properties": {
                  "bin_source": {
                    "type": "string"
                  },
                  "asset_regexp": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "required": ["name", "github_repo", "platforms"]
      }
    }
  }
}
