{
  "$schema": "./dotf-github.schema.json",
  "packages": [
    {
      "name": "nvim",
      "github_repo": "neovim/neovim",
      "strip_components": 1,
      "platforms": {
        "x86_64": {
          "bin_source": "bin/nvim",
          "asset_regexp": "nvim-linux64.tar.gz"
        },
        "darwin": {
          "bin_source": "bin/nvim",
          "asset_regexp": "nvim-macos.tar.gz"
        }
      }
    },
    {
      "name": "exa",
      "github_repo": "ogham/exa",
      "platforms": {
        "x86_64": {
          "bin_source": "bin/exa",
          "asset_regexp": "exa-linux-x86_64.*"
        },
        "darwin": {
          "bin_source": "bin/exa",
          "asset_regexp": "exa-macos-x86_64.*"
        }
      }
    },
    {
      "name": "ripgrep",
      "version": "12.1.1",
      "github_repo": "BurntSushi/ripgrep",
      "bin_target": "rg",
      "strip_components": 1,
      "platforms": {
        "x86_64": {
          "asset_regexp": "ripgrep-.*-x86_64-unknown-linux.*"
        },
        "mac": {
          "asset_regexp": "ripgrep-.*-x86_64-apple-darwin.*"
        },
        "armv7l": {
          "asset_regexp": "ripgrep-.*arm-unknown-linux-.*"
        }
      }
    },
    {
      "name": "gron",
      "github_repo": "tomnomnom/gron",
      "version": "prerelease",
      "platforms": {
        "x86_64": {
          "asset_regexp": "gron-linux-amd64.*"
        },
        "mac": {
          "asset_regexp": "gron-darwin-amd64.*"
        }
      }
    },
    {
      "name": "shfmt",
      "github_repo": "mvdan/sh",
      "extract": false,
      "platforms": {
        "x86_64": {
          "asset_regexp": "shfmt_.*_linux_amd64.*"
        },
        "mac": {
          "asset_regexp": "shfmt_.*_darwin_amd64.*"
        }
      }
    },
    {
      "name": "delta",
      "github_repo": "dandavison/delta",
      "strip_components": 1,
      "platforms": {
        "x86_64": {
          "asset_regexp": "delta-.*-x86_64-unknown-linux-musl.*"
        },
        "mac": {
          "asset_regexp": "delta-.*-x86_64-apple-darwin.*"
        },
        "armv7l": {
          "asset_regexp": "delta-.*-arm-unknown-linux.*"
        }
      }
    },
    {
      "name": "browsh",
      "github_repo": "browsh-org/browsh",
      "extract": false,
      "platforms": {
        "x86_64": {
          "asset_regexp": "browsh_.*_linux_amd64.*"
        }
      }
    },
    {
      "name": "bat",
      "github_repo": "sharkdp/bat",
      "strip_components": 1,
      "platforms": {
        "x86_64": {
          "asset_regexp": "bat-.*-x86_64-unknown-linux-musl.*"
        },
        "armv7l": {
          "asset_regexp": "bat-.*-arm-.*"
        }
      }
    },
    {
      "name": "verco",
      "github_repo": "matheuslessarodrigues/verco",
      "extract": false,
      "platforms": {
        "x86_64": {
          "asset_regexp": "verco-linux-x86_64"
        }
      }
    },
    {
      "name": "glow",
      "github_repo": "charmbracelet/glow",
      "platforms": {
        "x86_64": {
          "asset_regexp": "glow_.*_linux_x86_64.*"
        }
      }
    }
  ]
}
