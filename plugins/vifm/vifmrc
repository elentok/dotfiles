set vicmd=nvim
set incsearch
set syscalls " faster copies and support progress

" show hidden files and directories
set dotfiles
set dotdirs

" smart case sensitivity
set ignorecase
set smartcase

color gruvbox

" file viewers
fileviewer *.zip,*.jar,*.war,*.ear zip -sf %c, echo "No zip to preview:"

filetype * xdg-open

" vim: syntax=vim
