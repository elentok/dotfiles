" Settings {{{1
set vicmd=nvim
set incsearch
set syscalls " faster copies and support progress
set wildmenu
set wildstyle=popup

" show hidden files and directories
set dotfiles
set dotdirs

" smart case sensitivity
set ignorecase
set smartcase

color gruvbox

" File Viewers {{{1
fileviewer *.zip,*.jar,*.war,*.ear zip -sf %c, echo "No zip to preview:"
fileviewer *.pdf pdftotext -nopgbrk %c -
fileviewer *.deb dpkg -c %c
fileviewer *.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.mpeg,*.vob,
          \*.fl[icv],*.m2v,*.mov,*.webm,*.mts,*.m4v,*.r[am],*.qt,*.divx,
          \*.as[fx]
         \ ffprobe -pretty %c 2>&1
fileviewer *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.xpm
         \ identify %f
fileviewer *.7z 7z l %c
fileviewer *.ts,*.js,*.yml,*.json,*.rb,*.sh,*.vim
         \ highlight -O ansi %c 

filetype *.png,*.jpg,*.jpeg,*.gif fim %c
filetype * xdg-open

" Keybindings {{{1

" Mappings for faster renaming
nnoremap I cw<c-a>
nnoremap cc cw<c-u>
nnoremap A cw

" Open editor to edit vifmrc and apply settings after returning to vifm
nnoremap ,c :write | edit $MYVIFMRC | restart<cr>

" Toggle visibility of preview window
nnoremap w :view<cr>
vnoremap w :view<cr>gv

" vim: syntax=vim foldmethod=marker
