# [github]
#   user = elentok

[include]
  path = ~/.dotlocal/gitconfig

[core]
  excludesfile = ~/.dotfiles/plugins/git/gitignore

[color]
  ui = auto
  diff = auto

[alias]
  a = add
  aa = add --all
  ap = add -p
  b = branch
  bd = branch -d
  bv = branch -vv
  ci = commit
  cm = commit -e -m
  cp = cherry-pick
  cia = commit --amend
  cb = checkout -b
  co = checkout
  d = diff
  dc = diff --cached
  di = diff
  f = fetch
  h = help
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr by %C(yellow)%an%Creset)%Creset'
  m = merge
  mff = merge --no-ff
  mffo = merge --ff-only
  pl = pull
  plr = pull --rebase
  ps = push
  psa = push noreview develop master --tags
  pst = push --tags
  pullff = pull --ff-only
  r = reset
  rb = rebase
  rbc = rebase --continue
  rbs = rebase --skip
  rbi = rebase -i
  rh = reset HEAD
  s = status
  sl = stash list
  sp = confirm stash pop
  ss = confirm stash save --patch
  t = tag
  semtag = !git tag -a $(semver tag) -m \"tagging $(semver tag)\"
  g = grep --break --heading --line-number
  alias = config --get-regexp '^alias\\.'
  msg = log -1 --pretty=%B
  lasttag = describe --abbrev=0

[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[merge]
  tool = vimdiff

[push]
  default = matching

[pull]
  rebase = true

[rebase]
  autosquash = true

[pager]
  show = diff-so-fancy | less --tabs=1,5 -RFX
  diff = diff-so-fancy | less --tabs=1,5 -RFX

[color "diff-highlight"]
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
  oldNormal = red bold

;[credential]
  ;helper = osxkeychain

; vim: filetype=gitconfig
