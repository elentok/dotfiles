[include]
  path = ~/.dotlocal/gitconfig
[rebase]
  autosquash = true
[diff]
[color]
  ui = auto
  diff = auto
[alias]
  a = add
  aa = add --all
  ap = add -p
  b = branch
  bv = branch -vv
  bd = branch -d
  bdd = branch -D
  bm = branch -m
  br = branch -r
  cf = commit --amend --no-edit
  cfx = commit --fixup
  ci = commit
  cm = commit -e -m
  clf = clean -f
  cp = cherry-pick
  cia = commit --amend
  cb = checkout -b
  co = checkout
  d = diff
  dc = diff --cached
  di = diff
  f = fetch
  h = help
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr by %C(yellow)%an%Creset)%Creset'
  m = merge
  mff = merge --no-ff
  pl = pull
  ps = push
  psa = push noreview develop master --tags
  pst = push --tags
  pullff = pull --ff-only
  r = reset
  rb = rebase
  rbc = rebase --continue
  rbs = rebase --skip
  rbi = rebase -i
  rh = reset HEAD
  s = status
  sl = stash list
  st = stash
  sp = stash pop
  ss = stash show -p
  t = tag
  semtag = !git tag -a $(semver tag) -m \"tagging $(semver tag)\"
  g = grep --break --heading --line-number

[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[merge]
  tool = vimdiff

[push]
  default = matching
[core]
  editor = vim

;[credential]
  ;helper = osxkeychain
