[include]
  path = ~/.dotlocal/gitconfig

[core]
  excludesfile = ~/.dotfiles/plugins/git/gitignore

[color]
  ui = auto
  diff = auto

[alias]
  a = add
  aa = add --all
  ap = add -p
  b = branch
  bd = branch -d
  bv = branch -vv
  ci = commit
  cm = commit -e -m
  cp = cherry-pick
  cia = commit --amend
  cb = checkout -b
  co = checkout
  d = diff
  dc = diff --cached
  di = diff
  f = fetch
  h = help
  l = !git plog ${1} | less --chop-long-lines --RAW-CONTROL-CHARS --quit-if-one-screen --no-init
  ll = plog -10
  lg = log --graph
  m = merge
  my-branch = rev-parse --abbrev-ref HEAD
  mff = merge --no-ff
  mffo = merge --ff-only
  pl = pull
  plr = pull --rebase
  ps = push
  psa = push noreview develop master --tags
  pst = push --tags
  pullff = pull --ff-only
  r = reset
  rp = reset --patch
  rb = rebase
  rbc = rebase --continue
  rbs = rebase --skip
  rbi = rebase -i
  rh = reset HEAD
  s = status
  sl = stash list
  sp = confirm stash pop
  ss = confirm stash save --patch
  smu = submodule update --init --recursive
  t = tag
  semtag = !git tag -a $(semver tag) -m \"tagging $(semver tag)\"
  g = grep --break --heading --line-number
  alias = config --get-regexp '^alias\\.'
  msg = log -1 --pretty=%B
  ls = log --pretty='%h %s'
  lasttag = describe --abbrev=0

[format]
  ; TODO: Should I use "%cr" or "%ar" for the date?
  ; pretty=format:%C(yellow)%h%Creset -%C(green)%d%Creset %s (%C(blue)%cr by %C(green)%an%Creset)%Creset
  pretty=format:%C(magenta)%h%Creset %C(blue)%>(14)%cr%Creset%C(green)%d%Creset %s (%C(green)%an%Creset)%Creset

[merge]
  tool = vimdiff

[push]
  default = matching

[pull]
  rebase = true

[rebase]
  autosquash = true

[pager]
  show = diff-so-fancy | less --tabs=1,5 -RFX
  diff = diff-so-fancy | less --tabs=1,5 -RFX

[color "diff-highlight"]
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
  oldNormal = red bold

;[credential]
  ;helper = osxkeychain

; vim: filetype=gitconfig
