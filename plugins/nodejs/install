#!/bin/bash

source `dirname $0`/../../framework

header "NodeJS"

if is_arch; then
  pacman_install nodejs npm
  yaourt_install yarn
else
  brew_install node
  brew_install yarn
fi

npm_install coffee-script
npm_install bower
npm_install json
npm_install jsontool
npm_install live-server
npm_install tailr
npm_install tern
npm_install eslint
npm_install typescript
npm_install tslint
