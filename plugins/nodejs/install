#!/usr/bin/env bash

set -euo pipefail

source `dirname $0`/../../framework

header "NodeJS"

if is_arch; then
  pacman_install nodejs npm yarn
else
  brew_install node
  brew_install yarn
fi

npm_install coffeescript
npm_install json
npm_install live-server
npm_install tern
npm_install eslint
npm_install typescript
npm_install tslint
