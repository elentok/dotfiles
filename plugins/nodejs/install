#!/usr/bin/env bash

set -euo pipefail

source `dirname $0`/../../framework

main() {
  if is_termux; then
    apt_install nodejs
  else
    git_clone https://github.com/tj/n $N_PREFIX
    install_node
  fi

  install_packages
}

install_node() {
  if [[ ! "$(n ls)" =~ 'Î¿' ]]; then
    n 11
  fi
}

install_packages() {
  npm_install yarn
  npm_install json
  npm_install live-server
  npm_install eslint
  npm_install typescript
  npm_install tslint
  npm_install prettier
  npm_install gtop
  npm_install semver
  npm_install cloc
}

main "$@"
