#!/bin/bash

source `dirname $0`/../../framework

header "NodeJS"

if is_mac; then
  brew_install node
else
  add_ppa chris-lea/node.js
  apt_install nodejs
fi



npm_install coffee-script
npm_install supervisor
npm_install grunt
npm_install grunt-cli
npm_install bower
npm_install json
npm_install jsontool
npm_install mocha
npm_install live-server
npm_install jade
npm_install jstransformer-coffee-script
npm_install jstransformer-less

npm_install dns-switcher
npm_install tailr
npm_install logparty
